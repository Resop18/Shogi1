<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/samurai2"
    android:orientation="vertical">

    <Space
        android:layout_width="652dp"
        android:layout_height="27dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:paddingLeft="320dp"
        android:text="Game Guide"
        android:textColor="#e5e5e5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="798dp"
        android:layout_height="114dp"
        android:layout_weight="0.02"
        android:paddingLeft="80dp"
        android:paddingRight="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <edu.up.cs371.resop18.shogi.shogi.RuleBoard
                android:id="@+id/ruleOptions2"
                android:layout_width="633dp"
                android:layout_height="517dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:paddingLeft="250dp"
        android:text="  Shogi Pieces' Legal Move"
        android:textColor="#e5e5e5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="1335dp"
        android:layout_height="122dp"
        android:layout_weight="0.01"
        android:orientation="horizontal"
        android:weightSum="1">

        <HorizontalScrollView
            android:layout_width="615dp"
            android:layout_height="172dp"
            android:layout_weight="0.20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <edu.up.cs371.resop18.shogi.shogi.RuleOptions
                    android:id="@+id/surfaceView"
                    android:layout_width="1683dp"
                    android:layout_height="145dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="672dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:paddingLeft="200dp"
        android:text="  Promoted Shogi Pieces' Legal Move"
        android:textColor="#e5e5e5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@drawable/bam1"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bam1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bam1"
                android:orientation="horizontal">

                <edu.up.cs371.resop18.shogi.shogi.RuleOptionsPromote
                    android:id="@+id/ruleOptions"
                    android:layout_width="1380dp"
                    android:layout_height="173dp" />
            </LinearLayout>


        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="     " />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.01" />

    <Spinner
        android:id="@+id/Easter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/EasterEgg"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Go Back" />

</LinearLayout>